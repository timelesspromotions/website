<%# Config %>
<%# Margin Bottom %>
<% range = ((total + 1)/2.0).ceil %>
<% if index <= range %>
  <% margin_bottom = "mb-4r-ns" %>
<% else %>
  <% margin_bottom = "" %>
<% end %>
<%# Margin Right %>
<% if index != total %>
  <% margin_right = "mr-2r mr-0r-ns" %>
<% else %>
  <% margin_right = "mr-0r mr-0r-ns" %>
<% end %>
<%# End %>
<article data-load="film" class="ttf-cubic_bezier td-1s tp-all d-inline_block d-block f-left-ns w-16r w-50p-ns <%= margin_right %> <%= margin_bottom %> ph-0r ph-1r-m ph-2r-l o-0 t-translateX4r t-translateY4r-ns">
  <a data-interaction="pickup" class="ttf-cubic_bezier td-0_3s tp-all t-translateY0 p-relative d-block bs-alpha" href="<%= film.href %>">
    <figure class="zi-1 ar ar-film ma-0r lh-0">
      <img class="ar-object" src="<%= film.image.src %>" alt="<%= film.image.alt %>">
    </figure>
    <header class="p-absolute zi-2 b-2r l-2r">
      <h1 class="ma-0r mb-0_5r ff-lato fw-300 fs-3r c-white"><%= film.title %></h1>
      <h2 class="ma-0r ff-lato fw-400 fs-1r ls-0_5r tt-uppercase c-white"><%= film.category %></h2>
    </header>
  </a>
</article>
